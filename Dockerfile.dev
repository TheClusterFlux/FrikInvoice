# Multi-stage build for better caching
FROM node:18-alpine AS dependencies

WORKDIR /app

# Copy only package files first (for better caching)
COPY package*.json ./

# Install dependencies in a separate layer
RUN npm ci --legacy-peer-deps --only=production && \
    npm cache clean --force

# Development stage
FROM node:18-alpine AS development

WORKDIR /app

# Copy dependencies from previous stage
COPY --from=dependencies /app/node_modules ./node_modules

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install --legacy-peer-deps

# Create cache directories that are writable
RUN mkdir -p /app/node_modules/.cache /tmp/.eslintcache && \
    chmod -R 777 /app/node_modules/.cache /tmp/.eslintcache

# Copy source code (this layer changes most frequently)
COPY . .

# Note: Running as root in development for simplicity
# In production, use a non-root user
EXPOSE 3000

CMD ["npm", "start"]
